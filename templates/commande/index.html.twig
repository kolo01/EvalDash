{% extends 'template.html.twig' %}

{% block title %}Client index
{% endblock %}

{% block body %}
	<div class="container">
		<div class="panel panel-primary">
			<div class="panel-heading">
				<i class="icon_menu"></i>Liste Client
			</div>

			<div class="panel-body">
				<h1>
					<a href="{{ path('app_client_add') }}" class="btn btn-success">
						<i class="fas fa-user-alt    ">Ajouter un client</i>
					</a>
				</h1>

				<table class="table table-condensed">
					<thead>
						<tr>
							<th>Id</th>
							<th>Client</th>
							<th>Numero de commande</th>
							<th>Date de commande</th>
							<th>Total</th>
							<th>Observation</th>
							<th>Actions</th>

						</tr>
					</thead>
					<tbody>
						{% for client in clients %}
							<tr>
								<td>{{ client.id }}</td>
								<td>{{ client.UniqueId }}</td>
								<td>{{ client.name }}</td>
								<td>{{ client.antecedent }}</td>
								<td>
									<a href="{{ path('app_client_edit', {'id': client.id}) }}" class="btn btn-primary">Modifier</a>
								</td>
								<td>
									<a href="{{ path('app_client_del', {'id': client.id}) }}" class="btn btn-danger">Voir</a>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="13">Aucune Commande trouv√©e</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
{% endblock %}
