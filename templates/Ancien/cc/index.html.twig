{% extends 'base.html.twig' %}

{% block title %}Commande index{% endblock %}

{% block body %}
    <h1>Commande index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DateCom</th>
                <th>Total</th>
                <th>Observation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td>{{ commande.id }}</td>
                <td>{{ commande.dateCom ? commande.dateCom|date('Y-m-d') : '' }}</td>
                <td>{{ commande.total }}</td>
                <td>{{ commande.observation }}</td>
                <td>
                    <a href="{{ path('app_c_c_show', {'id': commande.id}) }}">show</a>
                    <a href="{{ path('app_c_c_edit', {'id': commande.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_c_c_new') }}">Create new</a>
{% endblock %}
