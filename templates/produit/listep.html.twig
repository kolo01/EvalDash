{% block body %}
    <h1>Listes des produits</h1>

    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Pa</th>
                <th>Pv</th>
                <th>Tva</th>
              
                <th>Image</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.libelle }}</td>
                <td>{{ produit.Pa }}</td>
                <td>{{ produit.Pv }}</td>
                <td>{{ produit.Tva }}</td>
              
                <td><img src ="{{ asset('uploads/images/' ~ produit.image) }}"
   alt =""  width="100" height="100"></td>
                
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('produit_new') }}">Create</a>
{% endblock %}
