{% extends 'template.html.twig' %}

{% block title %}Client index
{% endblock %}

{% block body %}
	<div class="container">
		<div class="panel panel-primary">
			<div class="panel-heading">
				<i class="icon_menu"></i>Liste Client
			</div>

			<div class="panel-body">
				<h1>
					<a href="{{ path('app_commande_new') }}" class="btn btn-success">
						<i class="fas fa-user-alt    ">Ajouter une Commande</i>
					</a>
				</h1>

				<table class="table table-condensed">
					<thead>
						<tr>
								<th>Numero de commande</th>
							<th>Client</th>
						
							<th>Date de commande</th>
							<th>Total</th>
							<th>Observation</th>
							<th>Actions</th>

						</tr>
					</thead>
					<tbody>
						{% for c in commandes %}
							<tr>
								<td>{{ c.id }}</td>
								{# <td>{{  }}</td> #}
								{# <td>{{ c.NumCom }}</td>
								<td>{{ c.NumCom }}</td> #}
								<td>{{ c.dateCom ? c.dateCom|date('Y-m-d') : '' }}</td>
								<td>{{ c.total }}</td>
								<td>{{ c.observation }}</td>
								<td>
									{# <a href="{{ path('app_client_edit', {'id': client.id}) }}" class="btn btn-primary">Modifier</a> #}
								</td>
								<td>
									{# <a href="{{ path('app_client_del', {'id': client.id}) }}" class="btn btn-danger">Voir</a> #}
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="13">Aucune Commande trouv√©e</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
{% endblock %}
